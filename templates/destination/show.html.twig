{% extends 'base.html.twig' %}

{% block title %}Destination - {{ destination }}{% endblock %}

{% block body %}
    <div class="d-flex flex-column">
        <div style="margin-left: 25%; margin-top: 4%">
            <h2>Explorez {{ destination.pays }} </h2>
        </div>
        <div class="d-flex justify-content-center">
            <img style="width: 800px" src="{{ asset('uploads/photos/' ~ destination.photo) }}" class="img-fluid "
                 alt="...">


            </div>
        <div class="d-flex justify-content-center">

            <p> {{ destination.nom }}</p>
            <p style="width: 700px;"> {{ destination.description }}</p>
        </div>
        </div>

        <div class="d-flex flex-column ">
            {% if articles|length > 0 %}
                {#        <h3>ARTICLE :</h3> #}
                {% for article in articles %}
                    <div class="card d-flex" style="margin-left: 25%; margin-right: 25%; margin-top: 20px">
                        <div class="card-body">
                            <h5 class="card-title">{{ article.titre }}</h5>
                            <p class="card-text">{{ article.description }}.</p>
                        </div>
                        {% if article.photo %}
                        <img src="{{ asset('uploads/photos/' ~ article.photo) }}" class="card-img" alt="..." style="width: 100%">
                        {% endif %}
                    </div>

                {% endfor %}
            {% else %}
                <div class="d-flex justify-content-center mt-5">Aucun article sur cette destination.</div>
            {% endif %}


        </div>
        <div class="d-flex justify-content-center mt-5">
            <a href="{{ path('destination_article', { id: destination.id }) }}" class="btn btn-primary">Ajouter un
                article Ã  cette destination</a>
        </div>
    </div>
{% endblock %}